# Copy to workflow/config.env and edit.
export OUTDIR="/PATH/TO/outdir"
export FASTQ_DIR="${OUTDIR}/fastq"
export QC_DIR="${OUTDIR}/qc"
export BAM_DIR="${OUTDIR}/bam"
export COUNTS_DIR="${OUTDIR}/counts"

# SRA toolkit
export SRA_TOOLKIT_BIN="/PATH/TO/sratoolkit/bin"

# Reference / annotation
export HISAT2_INDEX_PREFIX="/PATH/TO/hisat2/index/prefix"
export GTF="/PATH/TO/Bvulgaris.gtf"

# Threads
export THREADS=4

# Modules (optional)
export MOD_FASTQC="fastqc"
export MOD_HISAT2="hisat2"
export MOD_SAMTOOLS="samtools"
export MOD_SUBREAD="subread"   # provides featureCounts on many clusters
